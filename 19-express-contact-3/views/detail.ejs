<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Kontak</h2>
            <% if (!contact) { %>
            <div class="alert alert-danger mt-2" role="alert">
                Data kontak tidak ada. <br> <a href="/contact" class="alert-link">&laquo; Kembali ke halaman utama</a>
            </div>

            <% } else {%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone  %> </h6>
                    <p class="card-text"><%=  contact.email %> </p>
                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge"
                        >Edit</a>
                    <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge"
                        onclick="return confirm('hapus?')">Delete</a>
                    <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>