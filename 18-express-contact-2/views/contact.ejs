<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h2>Daftar Kontak</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Kontak</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No HP</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger" role="alert">
                                Data kontak kosong.
                            </div>
                        </td>
                    </tr>
                    <% } %>
                    <% contacts.forEach((c, i) => { %>
                    <tr>
                        <th scope="row"><%= ++i %> </th>
                        <td><%= c.nama %> </td>
                        <td><%= c.noHP %> </td>
                        <td>
                            <a href="/contact/<%= c.nama %> " class="badge rounded-pill text-bg-success">
                                <i class="bi bi-info-circle"></i>
                                detail
                            </a>
                        </td>
                    </tr>
                    <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</div>